//- Все примеси в этом файле должны начинаться c имени блока (pagination)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт в сборку
mixin pagination(mods)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +pagination('some-mod')
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' pagination--' + modsList[i].trim();
      }
    }

  .pagination(class= allMods)&attributes(attributes)
    button.link-button.link-button--prev first
    button.link-button.link-button--active 1
    button.link-button 2
    button.link-button 3
    button.link-button 4
    button.link-button 5
    span.link-button.link-button--dots ...
    button.link-button.link-button--next last

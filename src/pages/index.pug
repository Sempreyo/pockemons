extends ../templates/layout_default.pug

block variables
  - isMainPage = false
  - pageTitle = 'Стартовая страница'
  - metaDescription = 'description'
  - metaKeywords = 'keywords'

block content
  .container
    .page__tabs-wrapper
      .page__tabs
        button.tab.tab--active Pockemons
        button.tab Fight
    .page__tabs-content
      .page__grid
        .page__sidebar
          .per-page
            .per-page__title Per page:
            .per-page__btns
              button.link-btn.link-btn--active 12
              button.link-btn 24
              button.link-btn 48
          ul.page__filter.filter
            each type, index in types.typesArray
              li.filter__item
                +type(type.icon, type.title, type.active ? 'active' : '')
        .page__main
          .page__cards
            each card in cards.cardsArray
              +card(card.id, card.img, card.title, card.icons, card.characteristics)(class='page__card')
          .page__pagination-wrapper
            .page__pagination-inner
              +pagination()(class='page__pagination')
